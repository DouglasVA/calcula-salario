package course;

import java.util.Locale;
import java.util.Scanner;

public class Program {
	
	public static void main(String[] args) {

	Locale.setDefault(Locale.US);
	
	Scanner sc = new Scanner(System.in);
	
	double hr, valorHora, salario;
	int id;
		
	System.out.print("Sua identificação: ");
	id = sc.nextInt();
	
	System.out.print("Número de horas trabalhadas: ");
	hr = sc.nextDouble();
	
	System.out.print("Valor por hora: ");
	valorHora = sc.nextDouble();
	
	salario = hr * valorHora;
	
	System.out.println("");
	System.out.println("Sua identificação: " + id);
	System.out.printf("Seu salário: R$ %.2f", salario);
	
	sc.close();
		
	}
}
